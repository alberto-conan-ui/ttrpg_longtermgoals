# =============================================================================
# TTRPG Long-Term Goals — Environment Variables
# Copy this file to .env and fill in the values.
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string. Matches docker-compose.yml defaults.
DATABASE_URL=postgresql://ttrpg:ttrpg_dev@localhost:5432/ttrpg_longtermgoals

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
# Environment: development | test | production
NODE_ENV=development

# Secret used to sign session cookies. Must be at least 32 characters.
SESSION_SECRET=change-me-to-a-random-string-at-least-32-chars

# Base URL of the API (used for OAuth callback URLs)
API_URL=http://localhost:3000

# Base URL of the web app (used for redirects after auth)
WEB_URL=http://localhost:4200

# -----------------------------------------------------------------------------
# Auth — Google OAuth (optional in development)
# -----------------------------------------------------------------------------
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Auth — Discord OAuth (optional in development)
# -----------------------------------------------------------------------------
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Auth — Local (username/password)
# -----------------------------------------------------------------------------
# Automatically enabled when NODE_ENV is not 'production'.
# Set to 'true' to force-enable in any environment.
ENABLE_LOCAL_AUTH=true
